[flake8]
ignore = E203, E266, E501, W503, F403, F401, BLK100
max-line-length = 79
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    # versioneer files
    _version.py,
    versioneer.py,
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    # docs/source/conf.py,